import gradio as gr
from groq import Groq
import os
try:
    from google.colab import userdata
    API_KEY = userdata.get('GROQ_API_KEY')
except Exception:
    API_KEY = os.environ.get("GROQ_API_KEY")

if not API_KEY:
    raise ValueError("GROQ_API_KEY not found. Please add it to your Colab Secrets (key icon on the left) or set it as an environment variable.")

client = Groq(api_key=API_KEY)

SYSTEM_PROMPT = """You are an expert podcast scriptwriter. Generate clear, engaging, ready-to-record podcast scripts using natural, spoken language.

Always include a strong hook, concise introduction, well-structured main segments, smooth transitions, listener engagement moments, and a memorable conclusion with a clear outro.

Adapt tone, style, and pacing to the target audience and genre. Keep the delivery conversational, human, and optimized for audio, with optional cues like [pause] or [music fades in]."""

def respond(message, history, model, temperature, max_tokens):
    messages = [{"role": "system", "content": SYSTEM_PROMPT}]

    for h in history:
        messages.append({"role": "user", "content": h[0]})
        if h[1]:
            messages.append({"role": "assistant", "content": h[1]})

    messages.append({"role": "user", "content": message})

    try:
        response = client.chat.completions.create(
            model=model,
            messages=messages,
            temperature=temperature,
            max_completion_tokens=max_tokens,
        )
        return response.choices[0].message.content
    except Exception as e:
        return f"Error: {str(e)}"

# ChatInterface with additional inputs for parameters
demo = gr.ChatInterface(
    fn=respond,
    title="Podcast script generation",
    description="Create podcast, and more!",
    additional_inputs=[
        gr.Dropdown(
            choices=[
                "llama-3.3-70b-versatile",
                "llama-3.1-8b-instant",
            ],
            value="llama-3.3-70b-versatile",
            label="Model",
            info="Select the AI model to use"
        ),
        gr.Slider(
            minimum=0,
            maximum=2,
            value=0.9,
            step=0.1,
            label="Temperature",
            info="Controls randomness. Lower = more focused, Higher = more creative"
        ),
        gr.Slider(
            minimum=256,
            maximum=8192,
            value=2048,
            step=256,
            label="Max Tokens",
            info="Maximum length of the response"
        ),
    ],
    examples=[
        ["Write a storytelling podcast script about a historical mystery"],
        ["Create an interview-style podcast script with a startup founder"],
        ["Produce a true crime podcast script covering an unsolved case"],
         ["Create a 10-minute podcast episode script about building daily habits"],
   
    ],
    theme="soft",
)

if __name__ == "__main__":
    demo.launch()
